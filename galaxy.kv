#: import menu menu

MainWidget:


<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/bg2.jpg"

    # make the menu_widget a property so we can access it from different files
    menu_widget: menu_widget

    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75


    MenuWidget:
        id: menu_widget

        
    Label:
        text: root.score_txt
        font_size: dp(30)
        font_name: "fonts/RobotoSlab-Medium.ttf"
        size_hint: .2,.2
        pos_hint: { "x": 0, "top":1 }