
<MenuWidget>:
    # first thing in canvas:
    canvas.before:
        Color:
            rgba: 0 ,0 ,0 ,0.8
        Rectangle:
            size: self.size

    Label:
        font_size: dp(80)
        font_name: "fonts/Cinzel-SemiBold.ttf"
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .65}
    Button:
        font_size: dp(30)
        font_name: "fonts/RobotoSlab-Medium.ttf"
        text: root.parent.menu_button_title
        # to remove texture of button:
        background_normal: ""
        background_color: 1, 0.3, 0.4, 0.85
        pos_hint: {"center_x": .5, "center_y": .30}
        size_hint: 0.2,0.1
        # not the root MenuWidget, but its parent the MainWidget:
        on_press: root.parent.pressed_menu_button()
